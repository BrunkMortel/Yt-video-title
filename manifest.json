{
    "name": "Youtube music title video",
    "description": "Display the current music title on OBS",
    "version": "1.0",
    "manifest_version": 3,

    "permissions": ["activeTab", "scripting","storage","tabs"],

    "background": {
        "service_worker": "background.js"
      },

      "action": {
        "default_popup": "popup.html",
        "default_icon": {
          "16": "/images/ExtensionLogo_16x16.png",
          "32": "/images/ExtensionLogo_1_32x32.png",
          "48": "/images/ExtensionLogo_2_48x48.png",
          "128": "/images/ExtensionLogo_3_128x128.png"
        }
      },
      "icons": {
        "16": "/images/ExtensionLogo_16x16.png",
          "32": "/images/ExtensionLogo_1_32x32.png",
          "48": "/images/ExtensionLogo_2_48x48.png",
          "128": "/images/ExtensionLogo_3_128x128.png"
      }
}